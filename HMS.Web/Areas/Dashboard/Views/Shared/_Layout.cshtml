<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - Hotel Mangment System</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/Areas/Dashboard/Content/assets/favicon.ico" />

    <!-- Core theme CSS (includes Bootstrap)-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Areas/Dashboard/Content/js/scripts.js"></script>
    <script src="https://kit.fontawesome.com/2710e3bf91.js" crossorigin="anonymous"></script>
    <link href="~/Areas/Dashboard/Content/css/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">  <i class="fa-solid fa-building mr-1"></i>HMS</div>
            <div class="list-group list-group-flush">

                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","AccommodationTypes")">
                    <i class="fa-solid fa-hotel mr-1"></i>   Accommodation Types
                </a>

                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Roles")">
                    <i class="fa-solid fa-users-cog mr-1"></i>  Roles
                </a>

                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Users")">
                    <i class="fa-solid fa-users mr-1"></i>   Users
                </a>
            </div>
        </div>

        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">    <i class="fa-solid fa-sign-out-alt mr-1"></i> LOGOUT</a></li>
                        </ul>

                    </div>

                </div>
            </nav>

            <!-- Page content-->
            <div class="container-fluid">
                @RenderBody()


            </div>

        </div>
    </div>

    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
    }
    <!-- Bootstrap core JS-->
    <!-- Core theme JS-->
    @*<script src="js/scripts.js"></script>*@


</body>
</html>

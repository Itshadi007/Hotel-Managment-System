@model  HMS.Web.Areas.Dashboard.ViewModel.AccommodationTypesListingModel

@if (Model != null && Model.accommodationTypes != null && Model.accommodationTypes.Count() > 0)
{

    <table class="table table-striped">
        <thead>
            <tr>

                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var accomodationType in Model.accommodationTypes)
            {
                <tr>

                    <td>@accomodationType.Name</td>
                    <td>@accomodationType.Description</td>
                    <td>
                        <button data-href="@Url.Action("Action", "AccommodationTypes", new { ID = accomodationType.ID })"
                                type="button"
                                class="data-btn btn btn-success"
                                data-bs-toggle="modal"
                                data-bs-target="#actionModal">
                            <i class="fa-solid fa-trash-alt me-1"></i>Edit
                        </button>
                        <button data-href="@Url.Action("Delete", "AccommodationTypes", new { ID = accomodationType.ID })" type="button" class="data-btn btn btn-danger"  data-bs-toggle="modal"
 data-bs-target="#actionModal"><i class="fa-solid fa-edit me-1"></i>Delete</button>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
       Sorry! No record Available.
    </div>
}



@model  HMS.Web.Areas.Dashboard.ViewModel.AccommodationTypesListingModel

@if (Model != null && Model.accommodationTypes != null && Model.accommodationTypes.Count() > 0)
{

    <table class="table table-striped">
        <thead>
            <tr>

                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var accomodationType in Model.accommodationTypes)
            {
                <tr>

                    <td>@accomodationType.Name</td>
                    <td>@accomodationType.Description</td>
                    <td>
                        <button type="button" class="btn btn-success">Edit</button>
                        <button type="button" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
       Sorry! No record Available.
    </div>
}
